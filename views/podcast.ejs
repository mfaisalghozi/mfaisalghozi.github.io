    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
</head>

<body>
    <!-- Following Menu -->
    <div class="ui large top fixed hidden menu">
        <div class="ui container">
            <div class="item">
                <h2>MFG</h2>
            </div>
            <div class="right menu">
                <a class="item">Home</a>
                <a class="item">Article</a>
                <a class="active item">Podcast</a>
            </div>

        </div>
    </div>

    <!-- Sidebar Menu -->
    <div class="ui vertical inverted sidebar menu">
        <a class="item">Home</a>
        <a class="item">Article</a>
        <a class="active item">Podcast</a>

    </div>

    <div class="pusher">
        <!-- BIG HEADER OR BANNER -->
        <div class="ui inverted vertical masthead center aligned segment">
            <div class="ui container ">
                <div class="ui large secondary inverted pointing menu">
                    <div class="item">
                        <h2>MFG</h2>
                    </div>
                    <div class="right menu">
                        <a class="item" href="/">Home</a>
                        <a class="item" href="/article">Article</a>
                        <a class="active item" href="/podcast">Podcast</a>
                    </div>
                </div>
            </div>
            <div class="ui text container">
                <h2 class="ui inverted header">
                    MrafCommand Studio
                </h2>
            </div>
        </div>

        <div class="container my-5">
            <% if(currentUser && currentUser.username === 'mraf') {%>
            <a href="/podcast/new" class="btn btn-success btn-lg btn-block">Add New Podcast</a>
            <% } %>
            <% data.forEach(function(podcast){%>
            <div class="my-3 spotify-embed">
                <%- podcast.podcastUrl %>
            </div>
            <% }) %>
            <div class="my-3 spotify-embed">
                <iframe src="https://open.spotify.com/embed-podcast/episode/5CqZZDYFSL1efh3MKlQmlz" width="100%"
                    height="232" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
            </div>
        </div>

        <%- include("partials/footer") %>
    </div>



    </div>





    <!-- Optional JavaScript -->
    <!-- Semantic.JS -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
