<!DOCTYPE html>
<html>

<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Semantic UI -->
    <link rel="stylesheet" type="text/css"
        href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <link rel="stylesheet" href="./assets/blogDetail-Style.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <script src="./function/art_show_func.js"></script>

    <!-- Site Properties -->
    <title>Sticky Example - Semantic</title>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/visibility.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/sidebar.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/transition.min.js"></script>
    <script>
        $(document)
            .ready(function () {

                // fix main menu to page on passing
                $('.main.menu').visibility({
                    type: 'fixed'
                });
                $('.overlay').visibility({
                    type: 'fixed',
                    offset: 80
                });

                // lazy load images
                $('.image').visibility({
                    type: 'image',
                    transition: 'vertical flip',
                    duration: 500
                });

                // show dropdown on hover
                $('.main.menu  .ui.dropdown').dropdown({
                    on: 'hover'
                });

            });
    </script>

    <style type="text/css">
        body {
            background-color: #FFFFFF;
        }

        .main.container {
            margin-top: 2em;
        }

        .main.menu {
            margin-top: 4em;
            border-radius: 0;
            border: none;
            box-shadow: none;
            transition:
                box-shadow 0.5s ease,
                padding 0.5s ease;
        }

        .main.menu .item img.logo {
            margin-right: 1.5em;
        }

        .overlay {
            float: left;
            margin: 0em 3em 1em 0em;
        }

        .overlay .menu {
            position: relative;
            left: 0;
            transition: left 0.5s ease;
        }

        .main.menu.fixed {
            background-color: #FFFFFF;
            border: 1px solid #DDD;
            box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.2);
        }

        .overlay.fixed .menu {
            left: 800px;
        }

        .text.container .left.floated.image {
            margin: 2em 2em 2em -4em;
        }

        .text.container .right.floated.image {
            margin: 2em -4em 2em 2em;
        }

        .ui.footer.segment {
            margin: 5em 0em 0em;
            padding: 5em 0em;
        }

        .masthead h2.ui.header {
            margin-top: 3em;
            margin-bottom: 0em;
            font-size: 4em;
            font-weight: normal;
        }
    </style>
</head>

<body>

    <!-- Following Menu -->
    <!-- <div class="ui large top fixed hidden menu">
        <div class="ui container">
            <div class="item">
                <h2>MFG</h2>
            </div>
            <div class="right menu">
                <a class="item">Home</a>
                <a class="active item">Article</a>
                <a class="item">Podcast</a>
            </div>
        </div>
    </div> -->

    <!-- Sidebar Menu -->
    <div class="ui vertical inverted sidebar menu">
        <a class="item">Home</a>
        <a class="active item">Article</a>
        <a class="item">Podcast</a>

    </div>

    <div class="pusher">
        <!-- BIG HEADER OR BANNER -->
        <div class="ui inverted vertical masthead center aligned segment pb-4">
            <div class="ui container ">
                <div class="ui large secondary inverted pointing menu">
                    <div class="item">
                        <h2>MFG</h2>
                    </div>
                    <div class="right menu">
                        <a class="item" href="/">Home</a>
                        <a class="active item" href="/article">Article</a>
                        <a class="item" href="/podcast">Podcast</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="ui hidden divider"></div>

        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-sm-12 my-5">
                            <p class="lead">Blog Category</p>
                            <ul class="list-group">
                                <li class=" list-group-item 
                            <%if(article.category === "Philosophy"){%>
                                <%= 'active' %>
                            <% } %>" id="L1">
                                    Philosophy</li>
                                <li class="list-group-item <%if(article.category === "Computer Science"){%>
                                    <%= 'active' %>
                                <% } %>" id="L2">Computer Science</li>
                                <li class="list-group-item <%if(article.category === "Self Improvement"){%>
                                    <%= 'active' %>
                                <% } %>" id="L3">Self Improvement</li>
                                <li class="list-group-item <%if(article.category === "Science"){%>
                                    <%= 'active' %>
                                <% } %>" id="L4">Science</li>
                                <li class="list-group-item <%if(article.category === "Book"){%>
                                    <%= 'active' %>
                                <% } %>" id="L5">Book</li>
                                <li class="list-group-item <%if(article.category === "Game"){%>
                                    <%= 'active' %>
                                <% } %>" id="L6">Gaming</li>
                            </ul>
                        </div>
                        <div class="col-sm-12 my-3">
                            <div class="ui vertical rectangle test ad" data-text="Advertisement Space"></div>
                        </div>
                        <div class="col-sm-12 my-5">
                            <div class="list-group">
                                <a href="#" class="list-group-item list-group-item-action"><i class="twitter icon"></i>
                                    Tweet</a>
                                <a href="#" class="list-group-item list-group-item-action"><i class="facebook icon"></i>
                                    Share</a>
                                <a href="#" class="list-group-item list-group-item-action"><i class="mail icon"></i>
                                    E-mail</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="card">
                        <img src="<%= article.image %>" class=" card-img-top" alt="Camping-Image">
                        <card class="card-body">
                            <div class="row mb-2">
                                <div class="col-md-12">
                                    <h3 class="card-title"><%= article.name %> </h3>
                                </div>
                                <div class="col-md-12">
                                    <p class="lead float-left text-muted font-italic" style="font-size: 15px;">
                                        Written
                                        By MrafCommand</p>
                                </div>
                            </div>
                            <!--  -->
                            <p class="card-text">
                                <p><%- article.text %> </p>
                            </p>
                            <% if(currentUser && currentUser.username === 'mraf') {%>
                            <div class="content-editUpload row">
                                <div class="col-md-1">
                                    <a href="/article/<%= article._id %>/edit" class="btn btn-warning">Edit</a>
                                </div>
                                <div class="col-md-1 float-left">
                                    <form action="/article/<%= article._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                            <% } %>
                            <!-- <div class="content-review row">
                                <div class="col-md-6 review-information">
                                    <p class="card-text"><small class="text-danger">3.25 Stars</small></p>
                                </div>
                                <div class="col-md-6">
                                    <p class="card-text float-right"><small class="text-danger">4 Reviews</small></p>
                                </div>
                            </div> -->
                        </card>
                    </div>
                    <div class="comment my-3">
                        <div class="ui comments">
                            <h3 class="ui dividing header">Comments</h3>
                            <% article.comments.forEach(function(komen){ %>
                            <div class="comment">
                                <a class="avatar">
                                    <img
                                        src="https://pbs.twimg.com/profile_images/707968846880227328/ylFJEqxn_400x400.jpg">
                                </a>
                                <div class="content">
                                    <a class="author"><%= komen.author %> </a>

                                    <div class="metadata">
                                        <span class="date"><%= komen.date %> </span>
                                    </div>
                                    <div class="text">
                                        <%= komen.text %>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                            <form class="ui reply form" action="/article/<%= article._id %>/comment" method="POST">
                                <input type="text" class="form-control mb-2" id="name" placeholder="Input Your Name"
                                    name="author">
                                <div class="field">
                                    <textarea name="text"></textarea>
                                </div>
                                <button type="submit" class="ui blue labeled submit icon button"><i
                                        class="icon edit"></i> Add Reply</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>

        </div>

        <%- include("partials/footer") %>
</body>

</html>